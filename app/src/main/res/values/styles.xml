<resources>

    <!-- Base theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>

        <item name="colorPrimary">@color/bk_primary</item>
        <item name="colorPrimaryDark">@color/bk_primary_dark</item>
        <item name="colorAccent">@color/bk_accent</item>
    </style>

    <!-- Activity theme -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CourseTheme" parent="AppTheme">
        <item name="vpiTabPageIndicatorStyle">@style/MyTabPageIndicator</item>
    </style>

    <!-- Custom -->
    <!-- TabPageIndicator -->
    <style name="MyTabPageIndicator" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/vpi__tab_indicator</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:height">48dp</item>
        <item name="android:textAppearance">@style/MyTabPageIndicatorTextAppearance</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="MyTabPageIndicatorTextAppearance" parent="Widget">
        <item name="android:textColor">@drawable/course_tx_tab</item>
    </style>

</resources>
